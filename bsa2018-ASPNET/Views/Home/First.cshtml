@model List<(Post, int)>
@{
    ViewData["Title"] = "First Query";
}

<h2>First Query</h2>

@using (Html.BeginForm("First", "Home"))
{
    <input type="text" id="userId" name="userId" placeholder="Enter user id" />
    <input type="submit" value="Get result" />
}

<div id="result">
    @if (Model != null)
    {
        if (Model.Count == 0)
        {
            <p>Empty set!</p>
        }
        foreach (var item in Model)
        {
            <h3>@item.Item1.Body -@item.Item1.CreateAt.ToString("d")</h3>
            <h4 style="text-align:right">Commentaries: @item.Item2</h4>
            <hr />
        }
    }
</div>