@model List<Comment>
@{
    ViewData["Title"] = "Second Query";
}

<h2>Second Query</h2>

@using (Html.BeginForm("Second", "Home"))
{
    <input type="text" id="userId" name="userId" placeholder="Enter user id" />
    <input type="submit" value="Get result" />
}

<div id="result">
    @if (Model != null)
    {
        if (Model.Count == 0)
        {
            <p>Empty set!</p>
        }
        foreach (var item in Model)
        {
            <h4>@item.Body <span class="badge">@item.CreateAt.ToString("d")</span></h4>
            <p>Likes: @item.Likes</p>
            <hr />
        }
    }
</div>