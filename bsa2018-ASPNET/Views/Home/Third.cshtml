@model List<(int, string)>
@{
    ViewData["Title"] = "Third Query";
}

<h2>Third Query</h2>

@using (Html.BeginForm("Third", "Home"))
{
    <input type="text" id="userId" name="userId" placeholder="Enter user id" />
    <input type="submit" value="Get result" />
}

<div id="result">
    @if (Model != null)
    {
        <h3>Completed tasks:</h3>
        <br />
        if (Model.Count == 0)
        {
            <p>Empty set!</p>
        }
        foreach (var item in Model)
        {
            <h4>@item.Item1 - @item.Item2</h4>
            <hr />
        }
    }
</div>